#:import ItemDrawer libs.navigationDrawer.ItemDrawer


<NotifyOneLineIconListItem>:
    IconLeftWidget:
        icon: root.icon


<NotifyOneLineLeftIconItem>:
    IconLeftWidget:
        icon: root.icon


<NotifyTwoLineLeftIconItem>:
    IconLeftWidget:
        icon: root.icon


<NotifyTwoLineLeftAvatarItem>:
    secondary_theme_text_color: "Custom"
    secondary_text_color: app.theme_cls.primary_color

    ImageLeftWidget:
        source: root.icon


<NotifyOneLineLeftAvatarItem>:
    ImageLeftWidget:
        source: root.source


<NotifyOneLineLeftWidgetItem>:
    on_release: app.theme_cls.primary_palette = root.text

    LeftWidget:
        canvas.before:
            Color:
                rgba: root.color
            Ellipse:
                pos: self.pos
                size: self.size


<NotifyMDSwitch>:
    MDSwitch:
        source: root.source


<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color
