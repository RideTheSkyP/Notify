#:import environ os.environ


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "100dp", "100dp"
            source: f"{environ['NOTIFY_ASSETS']}kivymd.png"

    MDLabel:
        text: "Notify"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
#        effect_cls: StiffScrollEffect
        DrawerList:
            id: drawerList
